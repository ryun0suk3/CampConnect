  <% layout('layout/boilerplate') %>  
  <div class="row">
    <div class="col-6">
        <h1>All Campgrounds</h1>
    </div>
    <div class="col-6">
        <div class="d-flex flex-row-reverse">
            <a href="/campgrounds/new">
                <button type="button" class="btn btn-dark my-3 ">Add Campground</button>
            </a>
        </div>
    </div>
  </div>

<ul class="list-unstyled">
    <% for (let campground of campgrounds){%>
    <li>
        <div class="card mb-4">
            <div class="row">
                <div class="col-4">
                    <img src="<%= campground.image %>" alt="" class="img-fluid w-100 h-100">
                </div>
                <div class="col-8">
                    <h3 class="mt-3"><%= campground.title %>
                    <small class="text-body-secondary">
                        <%= campground.location %>
                    </small></h3>
                    <p>
                        <%= campground.description %>
                    </p>
                    <a href="/campgrounds/<%= campground._id %>">
                        <button type="button" class="btn btn-dark mt-3 ">Details</button>
                    </a>
                </div>
            </div>
        </div>
    </li>
    <% }%>
</ul>
