<% layout('layout/boilerplate') %>  
<h1 class="mb-4">
    <%= campground.title %>
    <small class="text-body-secondary"><%= campground.location %></small>
</h1>

<div class="row">
    <div class="col-6">
        <img src="<%=campground.image%>" alt="" class="img-fluid w-100">
    </div>
    <div class="col-6">
        <div>
            <h1>Description</h1>
        <%=campground.description%>
        </div>
        <div class="mt-3">
            <h1>Price:  $<%=campground.price%></h1>
        </div>
        <a href="/campgrounds/<%=campground._id%>/edit">
            <button type="button" class="btn btn-outline-dark mt-3 ">Edit Campground</button>
        </a>
        <form action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST">
            <button class="btn btn-outline-dark mt-3">Delete Campground</button>
        </form>
    </div>
</div>

